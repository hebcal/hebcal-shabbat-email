{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "module": "es6",
    "rootDir": "./src",
    "outDir": "dist",
    "esModuleInterop": true,
    "target": "ES2022",
    "sourceMap": false,
    "lib": ["ESNext"],
    "moduleResolution": "Node",
    "strict": true,
    "paths": {
      "*": ["./types/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
